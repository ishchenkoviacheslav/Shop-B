@model Al_Baraka.ViewModel.RegisterModel

@if (Model != null)
{



    @if (Model.Login != null && Model.Password != null & Model.ConfirmPassword != null)
    {


        @if (Model.Login.Length < 6 || Model.Password.Length < 6 || Model.Login == null)
        {
            <h2 style="color:red">Довжина логіну/паролю не менше 6 символів</h2>
        }



        @*@if (!User.Identity.IsAuthenticated & Model.Login != "")
            {
                 <h2 style="color:red">Такий логін вже зайнятий, використайте, будь-ласка інший</h2>
            }*@
    }
}

<h2>Реєстрація</h2>
<h3 style="color:green">Використовуйте тільки латинські літери та цифри</h3>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div>
            <label asp-for="Login">Введіть логін</label><br />
            <input type="text" asp-for="Login" placeholder="не менше 6 символів" />
            <span asp-validation-for="Login" />
        </div>
        <div>
            <label asp-for="Password">Введіть пароль</label><br />
            <input asp-for="Password" placeholder="не менше 6 символів" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <label asp-for="ConfirmPassword">Введіть пароль ще раз</label><br />
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div class="g-recaptcha" data-sitekey="6LdspTQUAAAAAKGpdwdXLfw1qovO9admsZ1lpO2F"></div>

        <div>
            <input type="submit" value="Регистрация" />
        </div>
    </div>
</form>

