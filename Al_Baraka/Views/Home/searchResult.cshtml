@using Al_Baraka.Models;
@model List<Product>

@if(Model.Count == 0)
{
    <h3>Вибачте, але за вашим запитом нічого не знайдено</h3>
}

<section id="posts" class="page-section">
    <div class="container">
        <div class="row">
            <br />
            @for (int i = 0; i < @Model.Count; i++)
            {
                var base64 = Convert.ToBase64String(Model[i].Image);
                var imgSrc = String.Format("data:image/jpg;base64,{0}", base64);

                <div class="col-md-3 col-sm-6">
                    <div class="post-inside">
                        <div class="post-thumb">
                            <a asp-area="" asp-controller="Home" asp-action="Details" asp-route-IdProduct="@Model[i].Id">
                                <img src="@imgSrc" alt="" style="padding:10px;margin-left:10px;margin-right:10px;max-height:240px;min-height:240px" />
                            </a>
                        </div>
                        <div class="post-content">
                            <h5><a asp-area="" asp-controller="Home" asp-action="Details" asp-route-IdProduct="@Model[i].Id">@Model[i].Name </a></h5>

                            <p>@Model[i].Description.Substring(0, (Model[i].Description.Length > 30 ? 30 : Model[i].Description.Length)) ..</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
