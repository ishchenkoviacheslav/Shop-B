            {
                <h1>Бакалія</h1>
            }
            if (Model[i].Groups.Italian)
            {
                <h1>Італійська продукція</h1>
            }
            if (Model[i].Groups.Nuts)
            {
                <h1>Горіхи</h1>
            }
            if (Model[i].Groups.Oils)
            {
                <h1>Олії</h1>
            }
            if (Model[i].Groups.Sauces)
            {
                <h1>Соуси</h1>
            }
            if (Model[i].Groups.Spice)
            {
                <h1>Спеції</h1>
            }
            if (Model[i].Groups.Sweets)
            {
                <h1>Солодощі</h1>
            }
            break;
        }
        else
        {
            coutoftrue = 0;
        }
    }
}



   <section id="posts" class="page-section">
    <div class="container">
        <div class="row">
            <br />
            @for (int i = 0; i < @Model.Count; i++)
            {
                var base64 = Convert.ToBase64String(Model[i].Image);
                var imgSrc = String.Format("data:image/jpg;base64,{0}", base64);

                <div class="col-md-3" style="padding-left:0px;padding-right:0px;overflow:hidden;margin:2px;align-content:center">
                        @*<div class="post-thumb">*@
                            <a asp-area="" asp-controller="Home" asp-action="Details" asp-route-IdProduct="@Model[i].Id">
                                    <img src="@imgSrc" alt="" width="100%" style="max-height:180px;min-height:180px"/>
                            </a>
                        @*</div>*@
                        <div class="post-content">
                            <h5><a asp-area="" asp-controller="Home" asp-action="Details" asp-route-IdProduct="@Model[i].Id">@Model[i].Name </a></h5>

                            <p>@Model[i].Description.Substring(0, (Model[i].Description.Length > 30 ? 30 : Model[i].Description.Length)) ..</p>
                            <hr style="border-color:grey;margin-top:10px;margin-bottom:10px">
                        </div>
                    </div>
            }
        </div>
    </div>
</section>
